<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.magnometer.abel.magnometer.MagnometerActivity">

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/gauge1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtview"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        gauge:pointStartColor="@color/red"
        gauge:pointEndColor="@color/red"
        gauge:startAngel="270"
        gauge:pointSize="7"
        gauge:strokeColor="@color/colorPrimaryDark"
        gauge:strokeWidth="10dp"
        gauge:startValue="0"
        gauge:endValue="360"
        gauge:sweepAngel="360"
        gauge:strokeCap="ROUND"

        />


    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/degrees"
        />
    <!--
    <ImageView
        android:id="@+id/Compass"

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtview"
        android:layout_centerHorizontal="true"
        android:src="@drawable/compass" />
        -->

</RelativeLayout>
